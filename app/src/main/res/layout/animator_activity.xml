<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.zqh_pc.androlldemo.AnimatorActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/anmator_tv1"
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:layout_centerHorizontal="true"
                android:background="@drawable/cirlce_ripple" />

            <ImageView
                android:id="@+id/anmator_iv3"
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:layout_below="@+id/anmator_tv1"
                android:layout_centerHorizontal="true"
                android:src="@mipmap/picture2" />

            <ImageView
                android:id="@+id/anmator_iv1"
                android:layout_width="match_parent"
                android:layout_height="280dp"
                android:layout_below="@+id/anmator_iv3"
                android:scaleType="centerCrop"
                android:src="@mipmap/picture1" />

            <ImageView
                android:id="@+id/anmator_iv2"
                android:layout_width="match_parent"
                android:layout_height="280dp"
                android:layout_below="@+id/anmator_iv3"
                android:scaleType="centerCrop"
                android:src="@mipmap/picture2"
                android:visibility="invisible" />

            <Button
                android:id="@+id/anmator_bt1"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_alignBottom="@+id/anmator_iv1"
                android:layout_alignRight="@+id/anmator_iv1"
                android:text="点我" />
        </RelativeLayout>
    </ScrollView>
</RelativeLayout>
